---
// Import the necessary dependencies
import FooterSocialLink from "@components/ui/links/FooterSocialLink.astro";
import EmailFooterInput from "@components/ui/forms/input/EmailFooterInput.astro";
import enStrings from "@utils/navigation.ts";
import frStrings from "@utils/fr/navigation.ts";
import Icon from "@components/ui/icons/Icon.astro";
import Logo from "@images/stilliconn.png";
import { SITE } from "@data/constants";
import Instagram from "@images/ig.png";
import Facebook from "@images/fb.png";
import { getFooterContent } from "@/lib/cosmic.js";
// Select the correct translation based on the page's lang prop:
const strings = Astro.currentLocale === "fr" ? frStrings : enStrings;

// Define the variables that will be used in this component
const cosmicFooter = await getFooterContent();
const sectionThreeTitle: string = cosmicFooter.newsletterTitle || (Astro.currentLocale === "fr" ? "Rester à jour" : "Join our wait list");
const sectionThreeContent: string = cosmicFooter.newsletterContent || (Astro.currentLocale === "fr"
    ? "Restez informé des derniers outils et des offres exclusives."
    : "Stay updated with our latest events.");
const crafted: string =
  Astro.currentLocale === "fr" ? "Fabriqué par" : "Crafted by";
const footerSections = (Array.isArray(cosmicFooter.sections) && cosmicFooter.sections.length) ? cosmicFooter.sections : strings.footerLinks;
const facebookUrl = cosmicFooter?.socialLinks?.facebook || strings.socialLinks.facebook;
const instagramUrl = cosmicFooter?.socialLinks?.instagram || strings.socialLinks.instagram;
---

<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-(--breakpoint-2xl)"
  >
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full lg:col-span-1">
        <!-- Brand Logo -->
        <img src={Logo.src} alt="StillCraft Events Logo" class="h-auto w-40" />
      </div>
      <!-- An array of links for Product and Company sections -->
      {
        footerSections.map((section) => (
          <div class="col-span-1">
            <h3 class="font-bold text-neutral-800 dark:text-neutral-200">
              {section.section}
            </h3>
            <ul class="mt-3 grid space-y-3">
              {section.links.map((link, index) => (
                <li>
                  <a
                    href={link.url}
                    class="inline-flex gap-x-2 rounded-lg text-neutral-600 ring-purple-500 outline-hidden transition duration-300 hover:text-neutral-500 focus-visible:ring-3 dark:text-neutral-400 dark:ring-purple-200 dark:hover:text-neutral-300 dark:focus:outline-hidden"
                  >
                    {link.name}
                  </a>
                  {section.section === "Company" && index === 2 ? (
                    <span class="ms-1 inline rounded-lg bg-violet-500 px-2 py-1 text-xs font-bold text-neutral-50">
                      Join the wait list!
                    </span>
                  ) : null}
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-2">
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200">
          {sectionThreeTitle}
        </h3>

        <form action="https://formspree.io/f/mzzeabpr" method="POST">
          <EmailFooterInput />
          <p class="mt-3 text-sm text-neutral-600 dark:text-neutral-400">
            {sectionThreeContent}
          </p>
        </form>
      </div>
    </div>

    <div
      class="mt-9 grid gap-y-2 sm:mt-12 sm:flex sm:items-center sm:justify-between sm:gap-y-0"
    >
      <div class="flex items-center justify-between">
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          © <span id="current-year"></span>
          {SITE.title}
          {crafted}
          <a
            class="rounded-lg font-medium underline underline-offset-2 ring-purple-500 outline-hidden transition duration-300 hover:text-neutral-700 hover:decoration-dashed focus:outline-hidden focus-visible:ring-3 dark:ring-purple-200 dark:hover:text-neutral-300"
            href="https://wa.link/jqayo5"
            target="_blank"
            rel="noopener noreferrer">Byte Deals</a
          >.
        </p>
      </div>

      <!-- Social Brands -->
      <div class="flex items-center space-x-4">
        <FooterSocialLink url={facebookUrl}>
          <img
            src={Facebook.src}
            alt="Facebook Logo"
            class="h-8 w-8 group-hover:animate-bounce"
          />
        </FooterSocialLink>
        {
          instagramUrl && (
            <FooterSocialLink url={instagramUrl}>
              <img
                src={Instagram.src}
                alt="Instagram Logo"
                class="h-8 w-8 group-hover:animate-bounce"
              />
            </FooterSocialLink>
          )
        }
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>
