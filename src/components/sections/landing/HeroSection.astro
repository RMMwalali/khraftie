---
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import ReviewComponent from "@components/ui/blocks/ReviewComponent.astro";

const {
  title,
  subTitle,
  primaryBtn,
  primaryBtnURL,
  secondaryBtn,
  secondaryBtnURL,
  withReview,
  avatars,
  starCount,
  rating,
  reviews,
  videoSrc,
  videoType,
  alt,
} = Astro.props;

interface Props {
  title: string;
  subTitle?: string;
  primaryBtn?: string;
  primaryBtnURL?: string;
  secondaryBtn?: string;
  secondaryBtnURL?: string;
  withReview?: boolean;
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
  videoSrc?: string;
  videoType?: string;
  alt?: string;
}
---

<!-- Grid container with adjusted padding and alignment -->
<section
  class="mx-auto grid max-w-[85rem] gap-4 px-4 py-14 sm:px-6 md:grid-cols-2 md:items-start md:gap-8 lg:px-8 2xl:max-w-full"
>
  <!-- Text Section -->
  <div>
    <h1
      class="block text-3xl font-bold tracking-tight text-balance text-neutral-800 sm:text-4xl lg:text-6xl lg:leading-tight dark:text-neutral-200"
    >
      <Fragment set:html={title} />
    </h1>
    {
      subTitle && (
        <p class="mt-3 text-lg leading-relaxed text-pretty text-neutral-700 lg:w-4/5 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      {primaryBtn && <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />}
      {
        secondaryBtn && (
          <SecondaryCTA title={secondaryBtn} url={secondaryBtnURL} />
        )
      }
    </div>
    {
      withReview && (
        <ReviewComponent
          avatars={avatars}
          starCount={starCount}
          rating={rating}
          reviews={reviews}
        />
      )
    }
  </div>

  <!-- Hero Video Section -->
  <div class="flex w-full">
    <div class="top-12 overflow-hidden rounded-2xl shadow-lg">
      {
        videoSrc ? (
          <video
            autoplay
            loop
            muted
            playsinline
            class="h-full w-full rounded-2xl object-cover object-center"
          >
            <source src={videoSrc} type={videoType} />
            Your browser does not support the video tag.
          </video>
        ) : (
          <img
            src={videoSrc}
            alt={alt}
            class="h-1/2 w-full rounded-2xl object-cover object-center"
            loading="eager"
            decoding="async"
            fetchpriority="high"
            sizes="(max-width: 768px) 100vw, 50vw"
          />
        )
      }
    </div>
  </div>
</section>
