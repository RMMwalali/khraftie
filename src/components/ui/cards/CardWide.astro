---
// Import necessary modules and utilities
import { Image } from "astro:assets";
import Icon from "@components/ui/icons/Icon.astro";
import type { CollectionEntry } from "astro:content";

const { product, productLocale = "" } = Astro.props;
const data = product?.data ?? product;
const imgSrc = data?.main?.imgCard ?? data?.imageUrl;
const isImageMetadata = imgSrc && typeof imgSrc === 'object' && typeof imgSrc.src === 'string' && typeof imgSrc.width === 'number' && typeof imgSrc.height === 'number';
const stringUrl = typeof imgSrc === 'string' ? imgSrc : (imgSrc?.url ?? imgSrc?.imgix_url ?? imgSrc?.image?.url ?? imgSrc?.image?.imgix_url ?? imgSrc?.media?.url ?? imgSrc?.media?.imgix_url ?? null);
const entryId = product?.id;
const ccHref = typeof entryId === 'string'
  ? (productLocale && productLocale !== 'en'
      ? `/${productLocale}/products/${entryId.replace(/^fr\//, '')}/`
      : `/products/${entryId.replace(/^en\//, '')}/`)
  : null;
const baseHref = (typeof data?.url === 'string' && data.url) ? data.url : (ccHref || '#');

interface Props {
  product: CollectionEntry<"products">;
  productLocale?: string;
}

// Define classes to be used with the Image component
const imageClass =
  "absolute inset-0 h-full w-full object-cover object-center transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110";
---

<!-- The anchor tag is the main container for the product card. When clicked, this leads to the details of the product. -->
<a
  href={baseHref}
  data-astro-prefetch
  class="group relative flex h-48 items-end overflow-hidden rounded-lg shadow-xl ring-purple-500 outline-hidden focus-visible:ring-3 md:col-span-2 md:h-80 dark:ring-purple-200 dark:focus:outline-hidden"
>
  <!-- The product's main image -->
  {
    imgSrc && (
      isImageMetadata ? (
        <Image
          src={imgSrc}
          alt={data?.main?.imgAlt || data?.alt || ""}
          draggable={"false"}
          class={imageClass}
          format={"avif"}
          loading={"lazy"}
          decoding={"async"}
          sizes={"(min-width: 1024px) 50vw, 100vw"}
        />
      ) : stringUrl ? (
        <img
          src={stringUrl}
          alt={data?.main?.imgAlt || data?.alt || ""}
          draggable="false"
          class={imageClass}
          loading="lazy"
          decoding="async"
        />
      ) : null
    )
  }
  <!-- This container includes a gradient overlay over the product's image -->
  <div
    class="pointer-events-none absolute inset-0 from-neutral-800 via-transparent to-transparent opacity-50"
  >
  </div>
  <!-- This container includes product's subtitle and an SVG icon-->
  <span
    class="relative mb-3 ml-4 inline-block text-sm font-bold text-purple-600 transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110 md:ml-5 md:text-lg"
    >{data.description} <Icon name="openInNew" /></span
  >
</a>
